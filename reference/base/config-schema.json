{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "program": {
      "type": "string",
      "enum": ["myapp"]
    },
    "downloads": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "source": {
            "type": "string",
            "pattern": "^s3://.+/.+"
          },
          "destination": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": ["name", "source", "destination"]
      },
      "minItems": 1
    }
  },
  "required": ["downloads"]
}
